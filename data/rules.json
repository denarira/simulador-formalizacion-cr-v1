      ],
      "documentos": [
        "Solicitud de póliza RT"
      ],
      "include_if": {
        "tendra_personal": true
      }
    },
    "municipal": {
      "entidad_ref": "municipalidad",
      "proceso": "Trámite de uso de suelo y patente comercial ante la municipalidad del cantón.",
